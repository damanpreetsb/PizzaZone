<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".TrackDeliveryActivity">

    <RelativeLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clipToPadding="false"
            android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backCoverImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:alpha="0.4"
                android:layout_marginTop="200dp"
                android:background="@color/colorAccent"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pizzaImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:transitionName="customisedPizza"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/ic_pizza"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/frontCoverImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="-100dp"
                android:background="@color/colorAccent"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapinees is on its way"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:fontFamily="@font/roboto_medium"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/trackButton"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK YOUR DELIVERY"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/colorAccent" />

</RelativeLayout>